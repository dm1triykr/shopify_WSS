<div class="page__meet-with-team-slider meet-with-team-slider">
    <div class="meet-with-team-slider__wrapper">
         {% for block in section.blocks %}
            <div class="meet-with-team-slider__item" data-slidernav="Meet the Jolly Family" style="background-color: {{ block.settings.bgcolor }}">
                <div class="meet-with-team-slider__content content-mwt">
                    <h2 class="content-mwt__title" style="color: {{ block.settings.title-color }}"><i class="icon-title"></i>{{ block.settings.title }}</h2>
                    <h5 class="content-mwt__subtitle" style="color: {{ block.settings.sub-title-color }}">{{ block.settings.sub-title }}</h5>
                    <div class="content-mwt__image">
                        {{ block.settings.image | img_url: "" | img_tag }}
                    </div>
                    <div class="content-mwt__button" style="color: {{ block.settings.button-color }}">
                        <a href="{{ block.settings.button-link }}" class="content-mwt__link" style="color: {{ block.settings.button-text-color }}">LEARN MORE</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

