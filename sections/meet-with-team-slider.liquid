            "name": "Meet with team slide",
            "settings": [
                {
                    "type": "header",
                    "content": "Background color" 
                },
                {
                    "type": "color",
                    "id": "bgcolor",
                    "label": "Set background color"
                },
                {
                    "type": "header",
                    "content": "Image"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Set image"
                },
                {
                    "type": "header",
                    "content": "Title"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Set title"
                },
                {
                    "type": "header",
                    "content": "Title color"
                },
                {
                    "type": "color",
                    "id": "title-color",
                    "label": "Set title color"
                },
                {
                    "type": "header",
                    "content": "Sub-title"
                },
                {
                    "type": "text",
                    "id": "sub-title",
                    "label": "Set sub-title"
                },
                {
                    "type": "header",
                    "content": "Sub-title color"
                },
                {
                    "type": "color",
                    "id": "sub-title-color",
                    "label": "Set sub-title color"
                },
                {
                    "type": "header",
